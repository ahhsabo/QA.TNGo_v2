        var formData = new FormData();
        console.log($('#imageFile')[0].files[0]);
        // Attach file
        formData.append('imageFile', $('#imageFile')[0].files[0]);
        $.ajax({
            type: 'POST',
            url: '/Admin/Manager/FileManager/UploadImage',
            data: formData,
            contentType: false,
            processData: false,
            traditional: true,
            success: function (data) {
                // GetAllImages()
                console.log(data);
                alert('Success!');
            },
            error: function (data) {
                alert('Error!');
            },
            done: function (data) {
                results = data;
                alert('Done!');
                console.log(data);
            },
        })
        };


