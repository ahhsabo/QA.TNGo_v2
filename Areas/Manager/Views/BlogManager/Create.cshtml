@using QA.TNGo_v2.Models
@model QA.TNGo_v2.Models.BlogManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var categories = (List<Category>)ViewData["Category"];
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@section Scripts{
    <!--CK Editor-->
    <script>
        ClassicEditor
            .create(document.querySelector('#blogManager_content'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}
<h2>Create</h2>

<h4>BlogManager</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" id="blogManager_content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Banner" class="control-label"></label>
                <input asp-for="Banner" class="form-control" />
                <span asp-validation-for="Banner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePosted" class="control-label"></label>
                <input asp-for="DatePosted" class="form-control" />
                <span asp-validation-for="DatePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category_ID" class="control-label"></label><br>
                @if (categories != null)
                {
                    @foreach (var cate in categories)
                    {
                        <input type="radio" asp-for="Category_ID" value="@cate.ID" id="@cate.ID" />
                        <label>@cate.Name</label><br/>
                    }
                }
                <span asp-validation-for="Category_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary my-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
