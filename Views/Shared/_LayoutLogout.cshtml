<script>
    $(function () {
        let star = '.star',
            selected = '.selected';

        $(star).on('click', function () {
            $(selected).each(function () {
                $(this).removeClass('selected');
            });
            $(this).addClass('selected');
        });
    });
</script>

<script>
    jQuery(document).ready(function () {
        var top = $("#ControlBar").height();
        if (top != null) {
            top = top;
        } else { top = 0; };
        jQuery("#scroll-top").hide();
        jQuery(function () {
            jQuery(window).scroll(function () {
                if (jQuery(this).scrollTop() > 163) {
                    $(".vmenu").attr("style", "position:fixed;top:" + top + "px;padding-right:1px;")
                } else { $(".vmenu").attr("style", "position:relative;top:0px;padding-right:0px;") }

                if (jQuery(this).scrollTop() > 0) {
                    jQuery('#scroll-top').fadeIn();
                } else {
                    jQuery('#scroll-top').fadeOut();
                }
            });
        });
    });
</script>
<script>
    $(document).on("click", "#btn-modal-login,#RegisterPartial,#ForgotPasswordPartial", function () {
        const language = $('#currentLanguage').val();
        var url = "/" + language + "/AccountWeb/" + $(this).data("action");
        $.ajax({
            url: url,
            success: function (data) {
                $("#modal-login .modal-content").html(data);
                $("#modal-login").modal("show");
            }
        });
    });

    $(document).on("click", "#btn-login", function () {
        $.ajax({
            url: "/AccountWeb/Login",
            method: 'post',
            data: $("#form-login").serialize(),
            success: function (data) {
                $("#modal-login .modal-content").html(data);
            }
        });
    });
</script>

